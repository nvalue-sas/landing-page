---
/**
 * DecorativeCorners component
 * Renders the decorative corner SVG icons for CTA buttons
 */

const corners = [
  { position: "top-[-2px] left-[-2px]" },
  { position: "top-[-2px] right-[-2px]" },
  { position: "bottom-[-2px] left-[-2px]" },
  { position: "right-[-2px] bottom-[-2px]" },
];
---

{
  corners.map((corner) => (
    <svg
      width="5"
      height="5"
      viewBox="0 0 5 5"
      class={`absolute fill-primary-300 dark:fill-primary-300/50 ${corner.position}`}
    >
      <path d="M2 0h1v2h2v1h-2v2h-1v-2h-2v-1h2z" />
    </svg>
  ))
}
