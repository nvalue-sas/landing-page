---
import DecorativeCorners from "./DecorativeCorners.astro";

interface Props {
  variant?: "desktop" | "mobile";
  href?: string;
  text?: string;
}

const {
  variant = "desktop",
  href = "#contact",
  text = "Iniciar un proyecto",
} = Astro.props;

const buttonClass =
  variant === "desktop"
    ? "group text-primary-500 dark:text-primary-300 relative px-3 py-2 text-base"
    : "mobile-menu-link bg-primary-500 hover:bg-primary-600 mx-6 mt-2 block rounded-md px-4 py-3 text-center text-base text-white";
---

<a href={href} class={buttonClass}>
  {
    variant === "desktop" ? (
      <>
        <span class="absolute inset-0 border border-dashed border-primary-300/60 bg-primary-400/10 group-hover:bg-primary-400/15 dark:border-primary-300/30" />
        <span class="font-mono font-semibold">{text}</span>
        <DecorativeCorners />
      </>
    ) : (
      <span>{text}</span>
    )
  }
</a>
